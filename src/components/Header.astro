---
interface Props {
  userName: string;
}

const { userName } = Astro.props;
---

<header>
  <div class="user-container">
    <div class="user-info">
      <img
        id="user-img"
        src="https://avatars.githubusercontent.com/u/12345678?v=4"
        alt="avatar"
        class="avatar"
        width="40"
        height="40"
      />
      <div id="user" class="user-name">
        <p>Hi there,</p>
        <p>{userName}</p>
      </div>
      <form class="logout" action="/api/auth/logout" method="POST">
        <button type="submit" class="btn">Logout</button>
      </form>
    </div>
  </div>
</header>

<style>
  header {
    z-index: 100;
    height: 4rem;
    background: #13151a;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }

  .user-container {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    height: 100%;
    padding: 0 20px;
  }

  .user-info {
    display: flex;
    align-items: center;
  }

  .avatar {
    border-radius: 50%;
    margin-right: 10px;
  }

  .user-name {
    color: #fff;
    font-size: 14px;
  }

  .btn {
    display: flex;
    padding: 0.5rem 1rem;
    border: none;
    cursor: pointer;
    background-color: #23262d;
    background-image: none;
    background-size: 400%;
    border-radius: 5px;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
    color: white;
    font-size: 0.9rem;
    font-weight: 500;
    font-family: "JetBrains Mono", monospace;
    text-transform: uppercase;
    text-shadow: 0 0 4px rgba(0, 0, 0, 0.3);
    line-height: 1;
    letter-spacing: 0.05em;
    justify-content: center;
    align-items: center;
    text-align: center;
    width: 100%;
    height: 2rem;
    max-width: 300px;
    margin: 0 auto;
  }

  .btn:is(:hover, :focus-visible) {
    background-position: 0;
    background-image: var(--accent-gradient);
    color: white;
    text-shadow: 0 0 4px rgba(0, 0, 0, 0.3);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.3);
    outline: none;
  }

  .logout {
    margin-left: 1rem;
  }
</style>
